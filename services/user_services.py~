from typing import List, Optional
from app.db.database import database
from app.db.models import User, UserCreate
from app.core.security import verify_password, get_password_hash


class UserService:
    async def create_user(self, user_data: UserCreate) -> Optional[User]:
        """Создать пользователя"""
        try:
            # Проверяем существование по email и username
            existing_email = await database.fetch_one(
                'SELECT id FROM users WHERE email = ?',
                (user_data.email,)
            )

            existing_username = await database.fetch_one(
                'SELECT id FROM users WHERE name = ?',
                (user_data.name,)
            )

            if existing_email:
                raise ValueError("Пользователь с таким email уже существует")

            if existing_username:
                raise ValueError("Пользователь с таким именем уже существует")

            # Хешируем пароль
            hashed_password = get_password_hash(user_data.password)

            # Создаем пользователя
            result = await database.execute(
                'INSERT INTO users (email, name, password_hash) VALUES (?, ?, ?)',
                (user_data.email, user_data.name, hashed_password)
            )

            # Получаем созданного пользователя
            row = await database.fetch_one(
                'SELECT id, email, name, created_at FROM users WHERE id = ?',
                (result.lastrowid,)
            )

            return User(id=row[0], email=row[1], name=row[2], created_at=row[3])

        except Exception as e:
            print(f"Error creating user: {e}")
            raise

    async def authenticate_user(self, username: str, password: str) -> Optional[User]:
        """Аутентификация пользователя"""
        try:
            # Ищем пользователя по email или имени
            row = await database.fetch_one(
                'SELECT id, email, name, password_hash, created_at FROM users WHERE email = ? OR name = ?',
                (username, username)
            )

            if not row:
                return None

            if not verify_password(password, row[3]):
                return None

            return User(id=row[0], email=row[1], name=row[2], created_at=row[4])
        except Exception as e:
            print(f"Error authenticating user: {e}")
            return None

    async def get_user_by_id(self, user_id: int) -> Optional[User]:
        """Получить пользователя по ID"""
        try:
            row = await database.fetch_one(
                'SELECT id, email, name, created_at FROM users WHERE id = ?',
                (user_id,)
            )

            if not row:
                return None

            return User(id=row[0], email=row[1], name=row[2], created_at=row[3])
        except Exception as e:
            print(f"Error getting user {user_id}: {e}")
            return None

    async def get_user_by_email(self, email: str) -> Optional[User]:
        """Получить пользователя по email"""
        try:
            row = await database.fetch_one(
                'SELECT id, email, name, created_at FROM users WHERE email = ?',
                (email,)
            )

            if not row:
                return None

            return User(id=row[0], email=row[1], name=row[2], created_at=row[3])
        except Exception as e:
            print(f"Error getting user by email {email}: {e}")
            return None

    async def update_user(self, user_id: int, name: str, email: str) -> Optional[User]:
        """Обновить пользователя"""
        try:
            result = await database.execute(
                'UPDATE users SET name = ?, email = ? WHERE id = ?',
                (name, email, user_id)
            )

            if result.rowcount == 0:
                return None

            return await self.get_user_by_id(user_id)
        except Exception as e:
            print(f"Error updating user {user_id}: {e}")
            return None

    async def delete_user(self, user_id: int) -> bool:
        """Удалить пользователя"""
        try:
            result = await database.execute(
                'DELETE FROM users WHERE id = ?',
                (user_id,)
            )

            return result.rowcount > 0
        except Exception as e:
            print(f"Error deleting user {user_id}: {e}")
            return False

    async def get_all_users(self) -> List[User]:
        """Получить всех пользователей"""
        try:
            rows = await database.fetch_all(
                'SELECT id, email, name, created_at FROM users ORDER BY created_at DESC'
            )

            return [
                User(id=row[0], email=row[1], name=row[2], created_at=row[3])
                for row in rows
            ]
        except Exception as e:
            print(f"Error getting all users: {e}")
            return []


user_service = UserService()